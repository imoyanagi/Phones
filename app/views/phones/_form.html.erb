
<div class="container">
	<div class="row">
		<div class="col-lg-2">
			<h1>検索条件</h1>
			<%= form_tag('/search') do %>

				<%= label_tag(:cost, "料金" ) %>
				<%= text_field_tag(:cost) %>
				<%#= collection_select(:cost, :cost, @plans, :id, :cost) %>

				<br>

				<%= label(:value, "データ量" ) %>
				<%= text_field_tag(:value) %>
				<br>

				家族の人数
				<%= select_tag :number_of_family, options_for_select([['１人',1],['2人',2],['3人',3],['4人',4],['5人',5]]) %>
				<br>

				月の通話時間
				<%= select_tag :call_time, options_for_select([['ほぼ使わない', 0], ['〜5分', 0 ], ['5〜20分', 5 ], ['20分~', 20]]) %>

				<%= submit_tag("検索") %>

			<% end %>
		</div>