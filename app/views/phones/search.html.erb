<%= render 'phones/header' %>
<%= render 'phones/form' %>

<div class="col-lg-9">
	<h1> 検索結果</h1>
	<table class="table table-striped">
		<tr>
			<th width="10%">キャリア</th>
			<th width="20%">プラン</th>
			<th width="20%">料金 </th>
			<th width="20%">データ量</th>
		</tr>
		<% @totals.uniq{ |h| h[:name]}.each do |total| %>
			<% if total[:cost] <= @search_max_cost && total[:cost] >= @search_min_cost %>
				<tr>
					<td><%= Career.find_by(id: total[:career_id]).name %></td>
					<td><%= total[:name] %></td>
					<td><%= total[:cost] %>円/月</td>
					<td><%= total[:value] %>GB/月</td>
					<td><%= link_to "詳細", phone_path(total) %></td>
				</tr>
			<% end %>
		<% end %>
	</table>

</div>
</div>
</div>