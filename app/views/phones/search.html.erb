<%= render 'phones/header' %>
<%= render 'phones/form' %>

<div class="col-lg-9">
	<h1> 検索結果</h1>
	<%= @mobile_phone %>
	<table class="table table-striped">
		<tr>
			<th>キャリア</th>
			<th>データプラン</th>
			<th>通話プラン</th>
			<th>料金 </th>
			<th>データ量</th>
			<th>端末</th>
			<th></th>
		</tr>
		<% @totals.each do |total| %>
			<% if (total[:data_cost] + total[:call_cost] + total[:phone_cost]) <= @search_max_cost && (total[:data_cost] + total[:call_cost] + total[:phone_cost]) >= @search_min_cost %>
				<tr>
					<td><%= Career.find_by(id: total[:career_id]).name %></td>
					<td><%= total[:data_name] %></td>
					<td><%= total[:call_name] %></td>
					<td><%= total[:data_cost] + total[:call_cost] + total[:phone_cost] %>円/月</td>
					<td><%= total[:value] %>GB/月</td>
					<td><%= total[:phone_name] %><td>
					<td><%= link_to "詳細", phone_path(total: total) %></td>
				</tr>

			<% end %>
		<% end %>
	</table>

</div>
</div>
</div>